<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>issuehub.io</title>

    <link type="text/css" rel="stylesheet" href="<%= url("css/github.css") %>" />
    <link type="text/css" rel="stylesheet" href="<%= url("css/foundation.min.css") %>" />
    <link type="text/css" rel="stylesheet" href="<%= url("css/style.css") %>" />
    <script type="text/javascript" src="<%= url("js/jquery.js") %>"></script>
    <script type="text/javascript" src="<%= url("js/application.js") %>"></script>
  </head>
  <body>
    <header>
    <div class="row">
      <div class="brand"><a href="/">issuehub.io</a></div>
      <div class="right">
        <% unless current_user %>
          <a href="/auth/github">Login with Github</a>
        <% else %>
          Logged in: <a href="http://github.com/<%= @nickname %>"><%= @nickname %> </a> / <a href="/logout">Logout</a>
        <% end %>
      </div>
    </div>
    </header>
    <div id="container">
      <%= yield %>
    </div>
  </body>
</html>
